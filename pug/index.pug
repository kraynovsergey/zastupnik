extends base

block seo
	- var seo = {title: 'Главная страница', description: '', keywords: ''}

block main
	//Интро
	section.section._pb0
		.container
			.intro__grid.section__padding
				.intro__text
					h1.intro__title(role="heading") Бесплатное мобильное приложение, <br>которое спасает детей, <br>попавших в беду
					p.intro__text.ln Одно нажатие тревожной кнопки и на помощь <br>придут волонтеры сообщества «Заступник»

				.intro__picture.full-width-mobile
					+picture_lazy('', 'tmp/', 'intro', 'png', 826, 792)

				.intro__app.full-width-mobile
					+picture_lazy('intro__app-block intro__app-picture picture', 'tmp/', 'qr', 'jpg', 217, 217)

					.intro__app-block.intro__app-text.ln
						p Время оказания помощи в регионах с развитым сообществом «Заступник» в настоящее время <strong>от 2 минут</strong>

					a.intro__app-link.btn._green(href="#" role="link") Установить приложение

					p.intro__app-note.ln Установите бесплатное мобильное приложение «Заступник» себе и своему ребенку

	//Истории
	mixin history_item(title)
		.swiper-slide.history__slide
			a.history__item(href="https://youtu.be/jPOCxzGCY6g" data-fancybox role="link")
				picture.history__picture.picture
					source(type="image/webp" srcset="img/tmp/webp/history@2x.webp 2x, img/tmp/webp/history.webp 1x" media="(min-width: 768px)")
					source(type="image/jpeg" srcset="img/tmp/history@2x.jpg 2x, img/tmp/history.jpg 1x" media="(min-width: 768px)")
					source(type="image/webp" srcset="img/tmp/webp/history-mobile@2x.webp 2x, img/tmp/webp/history-mobile.webp 1x" media="(max-width: 767px)")
					source(type="image/jpeg" srcset="img/tmp/history-mobile@2x.jpg 2x, img/tmp/history-mobile.jpg 1x" media="(max-width: 767px)")
					img(srcset="img/tmp/history@2x.jpg 2x, img/tmp/history.jpg 1x" alt="" width="338" height="728")
				span.history__title.ln(data-swiper-title)= title
				img.history__play(src="img/play.svg" width="92" height="92" alt="" loading='lazy')

	section.section._pb0
		.container
			.section__padding
				.swiper.history.full-width-mobile(data-swiper-history)
					.history__controls
						button.carousel__navigation._prev(type="button" role="button" aria-label="Предыдущий слайд" data-swiper-prev)
							+svg_sprite('carousel-arrow', 11, 17)

						.history__controls-items
							.history__controls-progress.carousel__progress._green(data-swiper-progress)
							.history__controls-title(data-swiper-title-target)

						button.carousel__navigation._next(type="button" role="button" aria-label="Следующий слайд" data-swiper-next)
							+svg_sprite('carousel-arrow', 11, 17)

					.swiper-wrapper
						+history_item('История одного спасения1')
						+history_item('История одного спасения2')
						+history_item('История одного спасения3')
						+history_item('История одного спасения4')
						+history_item('История одного спасения5')
						+history_item('История одного спасения6')
						+history_item('История одного спасения7')
						+history_item('История одного спасения8')
						+history_item('История одного спасения9')
						+history_item('История одного спасения10')

	//Миссия проекта
	section.section._pb0
		.container
			.mission__box.full-width-mobile
				.mission__content.ln
					h2.section__title(role="heading") Миссия проекта
					p «Заступник» реализуется как социальный проект, в котором все функции пользователям предоставляются бесплатно. В числе прочих функций «Заступник» позволяет детям, оказавшимся в экстренной ситуации, немедленно оповестить о наступлении такой критической ситуации родителей, экстренные службы и волонтеров, а самое главное, получить помощь в невероятно короткий срок - от двух минут

				+picture_lazy('mission__picture picture', '', 'green-btn', 'png', 390, 390)

			.mission__swiper-wrapper
				button.carousel__navigation.mission__navigation._prev(type="button" role="button" data-swiper-mission-prev)
					+svg_sprite('carousel-arrow', 11, 17)
				button.carousel__navigation.mission__navigation._next(type="button" role="button" data-swiper-mission-next)
					+svg_sprite('carousel-arrow', 11, 17)

				.swiper.mission__swiper.full-width-mobile(data-swiper-mission)
					.swiper-wrapper
						.swiper-slide
							.mission__item
								+picture('mission__item-picture picture', 'tmp/', 'mission-1', 'png', 309, 600)
								p.mission__item-title.ln Вы <span>всегда знаете</span> где находится ваш ребенок

						.swiper-slide
							.mission__item
								+picture('mission__item-picture picture', 'tmp/', 'mission-2', 'png', 309, 600)
								p.mission__item-title В случае опасности ребенок <span>получит помощь всего через несколько минут</span>

						.swiper-slide
							.mission__item
								+picture('mission__item-picture picture', 'tmp/', 'mission-3', 'png', 309, 600)
								p.mission__item-title <span>Получайте уведомления</span> когда ваш ребенок выходит из дома, школы и зон безопасности

						.swiper-slide
							.mission__item
								+picture('mission__item-picture picture', 'tmp/', 'mission-4', 'png', 309, 600)
								p.mission__item-title <span>Слушайте звук вокруг ребенка</span>, когда он отправит сигнал тревоги

						.swiper-slide
							.mission__item
								+picture('mission__item-picture picture', 'tmp/', 'mission-5', 'png', 309, 600)
								p.mission__item-title.ln Операторы сервиса «Заступник» и экстренные службы <span>всегда придут на помощь</span>

						.swiper-slide
							.mission__item
								+picture('mission__item-picture picture', 'tmp/', 'mission-6', 'png', 309, 600)
								p.mission__item-title Данные вашего ребенка <span>всегда в безопасности</span>

						.swiper-slide
							.mission__item
								+picture('mission__item-picture picture', 'tmp/', 'mission-7', 'png', 309, 600)
								p.mission__item-title Сформируйте свой <span>круг доверия</span>

						.swiper-slide
							.mission__item
								+picture('mission__item-picture picture', 'tmp/', 'mission-8', 'png', 309, 600)
								p.mission__item-title Безопасность <span>превыше всего</span>

					.mission__progress.carousel__progress(data-swiper-progress)

	//Видео
	section.section._pb0
		a.video(href="https://youtu.be/jPOCxzGCY6g" data-fancybox role="link" aria-label="Открыть видео")
